<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.edumate.boot.domain.purchase.model.mapper.PurchaseMapper">
    <update id="updateMoney" parameterType="map">
        UPDATE MEMBER SET MEMBER_MONEY = MEMBER_MONEY + #{amount}
        WHERE MEMBER_ID = #{memberId}
    </update>
    <update id="minusMoney" parameterType="map">
        UPDATE MEMBER SET MEMBER_MONEY = MEMBER_MONEY - #{amount}
        WHERE MEMBER_ID = #{memberId}
    </update>
    <insert id="updatePurchase">
        INSERT INTO PURCHASE VALUES (SEQ_PURCHASE_NO.NEXTVAL, #{lectureNo}, #{memberId})
    </insert>



</mapper>

